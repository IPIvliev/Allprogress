                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="col-md-12">
                    <label><strong>Текст статьи</strong></label>
                    <%= f.cktext_area :text, :placeholder => @article.text, :rows => "10", :class => "form-control wysihtml5" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <%= f.submit :value => "Отправить", :class => "btn btn-primary" %>
                </div>
              </div>
