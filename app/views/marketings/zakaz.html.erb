<!-- WRAPPER -->
		<div id="wrapper">

			<!-- PAGE TITLE -->
			<%= render "/shared/bread" %>

			<%= render '/shared/moremenu' %>

			<section class="container">
<% if @zakazs %>
<!-- INVOICE BODY -->
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Список <strong>Запросов</strong></h3>
					</div>

					<div class="panel-body">

						<p>Список вопросов, которые были заданны пользователями через вклюдку "Контакты" в меню сайта.</p>
					
					
						<table class="table table-striped">
							<!-- table head -->
							<thead>
								<tr>
									<th>#</th>
									<th>ФИО</th>
									<th>Телефон</th>
									<th>Артикул</th>
									<th>Дата запроса</th>
									<th>Ответ</th>
								</tr>
							</thead>
							
							<!-- table items -->
							<tbody>
								<% @zakazs.each do |zakaz| %>
									<tr><!-- item -->
										<td><%= zakaz.id %></td>
										<td><%= zakaz.name %></td>
										<td><%= zakaz.phone %></td>
										<td><%= zakaz.variant.articul %></td>
										<td><%= zakaz.created_at %></td>
										<td>Обработан</td>
									</tr>
								<% end %>
							</tbody>
						</table>


					</div>

				</div>
				<!-- INVOICE BODY -->
<% else %>
	<p>У вас пона нет ни одного заказа.</p>

<% end %>
			</section>
		</div>

