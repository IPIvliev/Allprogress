<!-- WRAPPER -->
		<div id="wrapper">

			<!-- PAGE TITLE -->
			<%= render "/shared/bread" %>

			<%= render '/shared/moremenu' %>

			<section class="container">
<% if @message %>
<!-- INVOICE BODY -->
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Список <strong>Запросов</strong></h3>
					</div>

					<div class="panel-body">

						<p>Список вопросов, которые были заданны пользователями через вклюдку "Контакты" в меню сайта.</p>
					
					
						<table class="table table-striped">
							<!-- table head -->
							<thead>
								<tr>
									<th>#</th>
									<th>фИО</th>
									<th class="hidden-sm">Вопрос</th>
									<th>Телефон</th>
									<th>E-mail</th>
									<th>Дата запроса</th>
									<th>Ответ</th>
								</tr>
							</thead>
							
							<!-- table items -->
							<tbody>
								<% @messages.each do |message| %>
									<tr><!-- item -->
										<td><%= message.id %></td>
										<td><%= message.name %></td>
										<td class="hidden-sm"><%= message.text %></td>
										<td><%= message.phone %></td>
										<td><%= message.email %></td>
										<td><%= message.created_at %></td>
										<td>$40</td>
									</tr>
								<% end %>
							</tbody>
						</table>


					</div>

				</div>
				<!-- INVOICE BODY -->
<% else %>
	<p>У вас пона нет ни одного вопроса.</p>

<% end %>
			</section>
		</div>

